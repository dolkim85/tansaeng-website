{
  "version": 2,
  "builds": [
    {
      "src": "index.php",
      "use": "vercel-php@0.7.3"
    },
    {
      "src": "api/**/*.php",
      "use": "vercel-php@0.7.3"
    },
    {
      "src": "admin/**/*.php", 
      "use": "vercel-php@0.7.3"
    },
    {
      "src": "pages/**/*.php",
      "use": "vercel-php@0.7.3"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.php"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/$1"
    },
    {
      "src": "/pages/(.*)",
      "dest": "/pages/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*\\.(css|js|png|jpg|jpeg|gif|svg|ico|mp4|woff|woff2|ttf))",
      "dest": "/$1"
    }
  ]
}